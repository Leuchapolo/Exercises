<ul>
	<% @projects.each do |project| %>
		<li><%=project.name%>: 
		<% if project.description != nil %>
			<%= project.description%> <a href = "/projects/<%=project.id%>">Show Info</a>
		<% else %>
			Item has no description
		<% end %>
		</li>
	<% end %>

</ul>

