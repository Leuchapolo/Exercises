<% if @my_entry.errors.any? %>
	<ul>
	<% @my_entry.errors.full_messages.each do |error| %>
		<li> <%= error %></li>
	<% end %> 
	</ul>

<% end %>

<%= form_for [@my_project, @my_entry] do |f| %>
	<%= f.label :hours %>
	<%= f.text_field :hours %>
	<br>
	<%= f.label :minutes %>
	<%= f.text_field :minutes %>
	<br>	
	<%= f.label :date %>
	<%= f.date_field :date %>
	<br>
	<%= f.submit "Save" %>

<% end %>